{
    "name": "cosname/flarum-chinese-search",
    "description": "Allow Flarum to search Chinese text.",
    "type": "flarum-extension",
    "keywords": [
        "search",
        "chinese",
        "text"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Yixuan Qiu",
            "email": "yixuan.qiu@cos.name"
        }
    ],
    "require": {
        "flarum/core": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Cosname\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Chinese Search",
            "icon": {
                "name": "fas fa-search",
                "backgroundColor": "#ddd",
                "color": "#333"
            }
        }
    }
}
